########################################
# Telegram Bot Configuration
########################################
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

########################################
# Polymarket API / CLOB Configuration
# The Python bot expects HOST and optional CLOB_* creds
########################################
HOST=https://clob.polymarket.com
CLOB_API_KEY=
CLOB_SECRET=
CLOB_PASS_PHRASE=

# Optional gamma endpoint (not required by current bot)
POLYMARKET_GAMMA_ENDPOINT=https://gamma-api.polymarket.com

# Wallet
# REQUIRED for order placement. Provide your Polygon private key here.
# The provided address is kept for reference; replace PK with your actual private key.
POLYMARKET_ADDRESS=
PK=
PBK=

########################################
# Trading Configuration
########################################
MAX_PRICE_NO_TOKENS=0.01
SCAN_INTERVAL_SECONDS=60
MAX_ORDER_SIZE=100
# The Python bot uses AUTO_ORDER instead of AUTO_PLACE_ORDERS
AUTO_ORDER=false

########################################
# Server Configuration
########################################
# The Python server uses API_PORT instead of PORT
API_PORT=3000
NODE_ENV=development
